{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // 1. Configuración de la Base de Datos (SQLite)
  // Utilizamos la cadena de SQLite para que EF Core cree el archivo 'app.db'
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db"
  },

  // 2. Configuración de JWT (JSON Web Token)
  "Jwt": {
    // Clave para firmar el token.
    "Key": "!$Uw6e~T4%tQ@z#sXv9&gYb2^hV*pN7cF",

    // Emisor para identificar a la API que generó el token
    "Issuer": "chat_ya_backend_issuer"
  },

  // Opcional: Puedes quitar AppSettings si no la usas para nada más, o dejarla si te resulta útil.
  "AppSettings": {
    "Secret": "!$Uw6e~T4%tQ@z#sXv9&gYb2^hV*pN7cF"
  },

  // 3. Configuración de Serilog (Necesario ya que lo configuraste en Program.cs)
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    }
  }
}